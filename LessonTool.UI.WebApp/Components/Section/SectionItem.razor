@inherits BaseComponent<SectionItem>

<div style="border-top: solid 1px rgba(0, 0, 0, 0.25);" class="mt-1 mx-5">
    <div class="d-flex flex-row mt-2">
        @if(SectionIndex > -1)
        {
            <div class="pe-3">
                <h2>@($"{SectionIndex + 1}.")</h2>
            </div>
        }
        <div class="d-flex flex-column">
            <h2>
                @Section.Title
            </h2>
            <p>
                @Section.Content
            </p>
        </div>
    </div>
</div>